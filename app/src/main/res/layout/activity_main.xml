<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:textSize="32sp"
        android:gravity="center"
        android:text="@string/app_name"
        />
    <TextView
        android:id="@+id/livedatatitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/live_data"
        />
    <Button
        android:id="@+id/livedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/live_data"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>
    <TextView
        android:id="@+id/stateFlowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/state_flow"
        />
    <Button
        android:id="@+id/stateFlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/state_flow"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>
    <TextView
        android:id="@+id/flowTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/flow"
        />
    <Button
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/state_flow"
        android:textColor="@color/white"
        android:background="@color/teal_700"/>


</LinearLayout>